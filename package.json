{
	"name": "react-ssr",
	"version": "1.0.0",
	"description": "Server side react rendering Demo",
	"main": "index.js",
	"scripts": {
		"start": "webpack --config ./webpack/webpack.client.js && webpack --config ./webpack/webpack.server.js && node ./build/bundle.js",
		"dev": "npm-run-all --parallel dev:*",
		"dev:server": "nodemon --watch build --exec \"node ./build/bundle.js\"",
		"dev:build-server": "webpack --config ./webpack/webpack.server.js --watch",
		"dev:build-client": "webpack --config ./webpack/webpack.client.js --watch",
		"test": "jest --config ./jest.config.json --coverage --runInBand --detectOpenHandles"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.11.1",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-transform-runtime": "^7.10.1",
		"@babel/polyfill": "^7.10.1",
		"@babel/preset-env": "^7.11.0",
		"@babel/preset-react": "^7.10.4",
		"axios": "^0.19.2",
		"babel-loader": "^8.1.0",
		"bootstrap": "^4.5.2",
		"classnames": "^2.2.6",
		"compression": "^1.7.4",
		"concurrently": "^5.3.0",
		"css-loader": "^4.2.1",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.3",
		"express": "^4.17.1",
		"express-http-proxy": "^1.6.2",
		"ignore-loader": "^0.1.2",
		"isomorphic-style-loader": "^5.1.0",
		"jest": "^26.4.0",
		"lodash": "^4.17.20",
		"mini-css-extract-plugin": "^0.10.0",
		"node-sass": "^4.14.1",
		"nodemon": "^2.0.4",
		"npm-run-all": "^4.1.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-helmet": "^6.1.0",
		"react-redux": "^7.2.1",
		"react-router-config": "^5.1.1",
		"react-router-dom": "^5.2.0",
		"reactstrap": "^8.5.1",
		"redux": "^4.0.5",
		"redux-devtools-extension": "^2.13.8",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.3.0",
		"sass": "^1.26.10",
		"sass-loader": "^9.0.3",
		"serialize-javascript": "^4.0.0",
		"style-loader": "^1.2.1",
		"webpack": "^4.44.1",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^5.1.1",
		"webpack-node-externals": "^2.5.1"
	},
	"devDependencies": {
		"babel-jest": "^26.3.0",
		"webpack-cli": "^3.3.12"
	},
	"babel": {
		"presets": [
			"@babel/env",
			"@babel/react"
		],
		"plugins": [
			[
				"@babel/plugin-proposal-class-properties",
				{
					"loose": true
				}
			]
		]
	}
}
